                },

            "domain_netbios_name":
                {   "description":"Enter a NETBIOS domain name that not contains a dot. example: DOMAIN",
                    "question":
                        {"What is the Root Domain NetBIOS name of the forest?":["DOMAIN"]},
                    "regex": "\\.",
                    "regex_validation":"notcontains"
                },

